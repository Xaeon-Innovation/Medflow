PORT=3000
NODE_ENV=development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/medflow_ai?schema=public"
JWT_SECRET="your-secret-key-change-in-production"
REDIS_URL="redis://localhost:6379"

# ═══════════════════════════════════════════
# Google Cloud / Vertex AI Configuration
# ═══════════════════════════════════════════
# Get your project ID from: https://console.cloud.google.com/home/dashboard
GCP_PROJECT_ID="your-gcp-project-id"
GCP_LOCATION="us-central1"

# MedGemma Model IDs (from Vertex AI Model Garden)
MEDGEMMA_TEXT_MODEL="medgemma-27b-text-it"
MEDGEMMA_MULTIMODAL_MODEL="medgemma-27b-it"

# ═══════════════════════════════════════════
# Authentication (Google Cloud)
# ═══════════════════════════════════════════
# Option 1: Service Account Key File (recommended for local dev)
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/your-service-account-key.json"
#
# Option 2: gcloud CLI auth (run: gcloud auth application-default login)
# No env var needed, SDK uses default credentials automatically.
