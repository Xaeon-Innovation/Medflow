  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^9.1.2",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.15.0",
    "eslint-config-next": "15.5.11",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.xaeon.medflow-ai",
    "productName": "MedFlow AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "desktop-app/**/*",
      "package.json"
